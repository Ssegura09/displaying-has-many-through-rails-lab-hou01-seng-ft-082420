<h2> Patient Information: </h2>
<ul>
    <li><h4><%=@patient.name%></h4></li>
    <li><h4><%=@patient.age%></h4></li>
</ul>
<h2> Appointments: </h2>
  <%@patient.appointments.each do | appointment |%>
  <ul>
    <li><p>Time: <%=appointment.appointment_datetime.strftime("%B %d, %Y at %H:%M")%></p></li>
    <li><p>Doctor: <%=link_to appointment.doctor.name, doctor_path(appointment.doctor) %></p></li>
  </ul>
  <% end %>
  

  